{
  "name": "tsucast",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "scripts": {
    "mobile": "npm run start --workspace=apps/mobile",
    "mobile:ios": "npm run ios --workspace=apps/mobile",
    "mobile:android": "npm run android --workspace=apps/mobile",
    "api": "npm run dev --workspace=apps/api",
    "api:build": "npm run build --workspace=apps/api",
    "web": "npm run dev --workspace=apps/web",
    "web:build": "npm run build --workspace=apps/web",
    "test": "npm run test --workspaces --if-present",
    "test:mobile": "npm run test --workspace=apps/mobile",
    "test:api": "npm run test --workspace=apps/api",
    "test:web": "npm run test --workspace=apps/web",
    "test:e2e": "npm run test:e2e --workspace=apps/api",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:seed": "npx supabase db seed"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "react-native-web": "^0.21.0"
  }
}
