{
  "name": "@tsucast/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --exclude='**/__tests__/e2e/**'",
    "test:watch": "vitest --exclude='**/__tests__/e2e/**'",
    "test:coverage": "vitest run --coverage --exclude='**/__tests__/e2e/**'",
    "test:e2e": "vitest run __tests__/e2e/ --testTimeout=30000"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@extractus/article-extractor": "^8.0.0",
    "@hono/node-server": "^1.11.0",
    "@mozilla/readability": "^0.6.0",
    "@supabase/supabase-js": "^2.45.0",
    "hono": "^4.4.0",
    "linkedom": "^0.18.0",
    "pdf-parse": "^1.1.1",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/pdf-parse": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^8.57.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
