# =============================================================================
# tsucast Web App Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values
#
# NOTE: NEXT_PUBLIC_* variables are baked into the build at compile time.
# Changes require a rebuild/redeploy.
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase (Auth + Database)
# -----------------------------------------------------------------------------
# LOCAL DEV: Use local Supabase (run `supabase start`)
# PRODUCTION: Get from Supabase Dashboard > Settings > API

NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
# LOCAL DEV: http://localhost:3001 (run `npm run api`)
# PRODUCTION: https://api.tsucast.com

NEXT_PUBLIC_API_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# PostHog Analytics — OPTIONAL
# -----------------------------------------------------------------------------
# Get from: PostHog Dashboard > Project Settings
# Leave empty to disable analytics (no-op in code)

NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# -----------------------------------------------------------------------------
# Backenrich Feedback Widget — OPTIONAL
# -----------------------------------------------------------------------------
# Get from: Backenrich Dashboard > Sites > Your Site > Settings
# Leave empty to disable feedback widget

NEXT_PUBLIC_BACKENRICH_API_KEY=
